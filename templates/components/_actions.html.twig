{#
Ожидаются переменные:
 - action
 - entityName
 - entityId
#}
<div class="actions">
    <div>
        {% if is_granted('ROLE_TEACHER') %}
        <div class="button-group" role="group">
            {% if (action == 'edit' or action == 'new') %}
                <div class="control">
                    <button class="button is-primary">Save or Add</button>
                </div>
            {% endif %}

            {% if (action != 'list') %}
                <a href="{{ path('app_' ~ entityName ~ '_index') }}" class="button">
                    Back to list
                </a>
            {% endif %}

            {% if (action != 'show' and action != 'new') %}
                <div class="control">
                    <a href="{{ path('app_' ~ entityName ~ '_show', {'id': entityId}) }}" class="button">Show</a>
                </div>
            {% endif %}

            {% if (action != 'edit' and action != 'new') %}
                <div class="control">
                    <a href="{{ path('app_' ~ entityName ~ '_edit', {'id': entityId}) }}" class="button">Edit</a>
                </div>
            {% endif %}

            {% if (action != 'new') %}
                <div class="control">
                <form method="post" action="{{ path('app_' ~ entityName ~ '_delete', {'id': entityId}) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entityId) }}">
                    <button class="alert button is-danger">Delete</button>
                </form>
                </div>
            {% endif %}
        </div>
        {% else %}
        <div class="field has-addons" role="group">
            {% if (action != 'list') %}
                <a href="{{ path('app_' ~ entityName ~ '_index') }}" class="button">
                    Back to list
                </a>
            {% endif %}

            {% if (action != 'show' and action != 'new') %}
                <div class="control">
                    <a href="{{ path('app_' ~ entityName ~ '_show', {'id': entityId}) }}" class="button">Show</a>
                </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>
