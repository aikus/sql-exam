{% extends 'base.html.twig' %}

{% block title %}{{ 'ExaminationSheet index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'ExaminationSheet index'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Student'|trans }}</th>
                <th>{{ 'Number of answers'|trans }}</th>
                <th>{{ 'Exam'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for examination_sheet in examination_sheets %}
            <tr>
                <td>{{ examination_sheet.id }}</td>
                <td>{{ examination_sheet.student.email }}</td>
                <td>{{ examination_sheet.answers|length }}</td>
                <td>{{ examination_sheet.exam.description }}</td>
                <td>
                    {{ include('components/_actions.html.twig', {
                        'action': 'list',
                        'entity': examination_sheet,
                        'entityName': 'examination_sheet'
                    }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_examination_sheet_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
