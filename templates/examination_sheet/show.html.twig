{% extends 'base.html.twig' %}

{% block title %}ExaminationSheet{% endblock %}

{% block body %}
    <h1>ExaminationSheet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ examination_sheet.id }}</td>
            </tr>
            <tr>
                <th>Student</th>
                <td>{{ examination_sheet.getStudent().getName() }}</td>
            </tr>
            <tr>
                <th>Exam</th>
                <td>{{ examination_sheet.getExam().getDescription() }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <caption>Ответы</caption>
        <thead>
        <tr>
            <th>Id</th>
            <th>Вопрос</th>
            <th>Текст ответа</th>
            <th>Начало</th>
            <th>Конец</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for answer in examination_sheet.getAnswers() %}
            <tr>
                <td>{{ answer.id }}</td>
                <td>{{ answer.getQuestion().getContent() }}</td>
                <td>{{ answer.getSqlText() }}</td>
                <td>{{ answer.getStart().format('d.m.Y H:i:s') }}</td>
                <td>{% if answer.getEnd() %}{{ answer.getEnd().format('d.m.Y H:i:s') }}{% endif %}</td>
                <td><div class="control">
                        <a href="{{ path('app_answer_show', {'id': answer.id}) }}" class="button">Show</a>
                    </div></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
