{% extends 'base.html.twig' %}

{% block title %}{{ 'Answer index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Answer index'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Sql_text'|trans }}</th>
                <th>{{ 'Start'|trans }}</th>
                <th>{{ 'End'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.id }}</td>
                <td>{{ answer.sqlText }}</td>
                <td>{{ answer.start ? answer.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ answer.end ? answer.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_answer_show', {'id': answer.id}) }}">show</a>
                    <a href="{{ path('app_answer_edit', {'id': answer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_answer_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
