{% extends 'admin.html.twig' %}

{% block title %}{{ 'User index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'User index'|trans }}</h1>

    <p>{{ 'User count %count%'|trans({'%count%': users|length}) }}</p>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'â„–'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'Fio'|trans }}</th>
                <th>{{ 'Roles'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for key, user in users %}
            <tr>
                <td>{{ key+1 }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.fio }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    {{ include('admin/components/_actions.html.twig', {
                        'action': 'list',
                        'entity': user,
                        'entityName': 'user'
                    }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
