{% extends 'admin.html.twig' %}

{% block title %}{{ 'User'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'User'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'Roles'|trans }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/components/_actions.html.twig') }}
{% endblock %}
