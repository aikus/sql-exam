{% extends 'base.html.twig' %}

{% block title %}Exam{% endblock %}

{% block body %}
    <h1>Exam</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exam.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exam.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exam_index') }}">back to list</a>

    <a href="{{ path('app_exam_edit', {'id': exam.id}) }}">edit</a>

    {{ include('exam/_delete_form.html.twig') }}

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>TimeLimit</th>
            <th>Ord</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for question in exam.getQuestions() %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.content }}</td>
                <td>{{ question.timeLimit }}</td>
                <td>{{ question.ord }}</td>
                <td>
                    <a href="{{ path('app_question_show', {'id': question.id}) }}">show</a>
                    <a href="{{ path('app_question_edit', {'id': question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
