{% extends 'base.html.twig' %}

{% block title %}Exam{% endblock %}

{% block body %}
    <h1>Exam</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exam.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exam.description }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('components/_actions.html.twig', {
        'action': 'show',
        'entityId': exam.id,
        'entityName': 'exam'
    }) }}

    <table class="table">
        <caption>Вопросы</caption>
        <thead>
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>TimeLimit</th>
            <th>Ord</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for question in exam.getQuestions() %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.content }}</td>
                <td>{{ question.timeLimit }}</td>
                <td>{{ question.ord }}</td>
                <td>
                    {{ include('components/_actions.html.twig', {
                        'action': 'list',
                        'entityId': question.id,
                        'entityName': 'question'
                    }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ include('components/_add_button.html.twig', {
        'params': {'exam': exam.id},
        'entityName': 'question'
    }) }}

{% endblock %}
